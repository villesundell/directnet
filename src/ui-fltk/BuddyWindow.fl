        label {  Connect to (IP or hostname):}
        callback estConn
        xywh {0 285 255 25} labelcolor 7 align 5 when 8
      }
      Fl_Input findUser {
        label {  Find (username):}
        callback estFnd
        xywh {0 330 255 25} labelcolor 7 align 5 when 8
      }
      Fl_Input chatJoin {
        label {  Join or create chat:}
        callback estCht
        xywh {0 375 255 25} labelcolor 7 align 5 when 8 deactivate
      }
      Fl_Button bSetAway {
        label Away
        callback fSetAway
        xywh {0 405 125 25}
      }
      Fl_Button bBack {
        label Back
        callback fBack
        xywh {130 405 125 25}
      }
    }
  }
} 
